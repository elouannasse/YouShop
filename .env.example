# ================================
# Application Configuration
# ================================
NODE_ENV=development
PORT=3000

# ================================
# Database Configuration (PostgreSQL)
# ================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=youshop
POSTGRES_PORT=5432

# Database URL format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# For Docker: use service name (postgres) as HOST
# For local: use localhost as HOST
DATABASE_URL="postgresql://postgres:your_secure_password_here@localhost:5432/youshop?schema=public"

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# ================================
# pgAdmin Configuration (Optional)
# ================================
PGADMIN_EMAIL=admin@youshop.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ================================
# CORS Configuration (Optional)
# ================================
CORS_ORIGIN=http://localhost:3001

# ================================
# Rate Limiting (Optional)
# ================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ================================
# File Upload (Optional)
# ================================
MAX_FILE_SIZE=5242880

# ================================
# Email Configuration (Optional - Future)
# ================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@youshop.com
